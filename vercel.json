{
    "version": 2,
    "builds": [
      {
        "src": "api/legalApp.py",
        "use": "@vercel/python"
      }
    ],
    "functions": {
      "api/**": {
        "memory": 1024,
        "maxDuration": 10
      }
    },
    "routes": [
      { "src": "/", "dest": "/api/legalApp.py" },
      { "src": "/analyze", "dest": "/api/legalApp.py" },
      { "src": "/chat", "dest": "/api/legalApp.py" }
    ]
  }